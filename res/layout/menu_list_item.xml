<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:background="@drawable/playlist_view_bg_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:id="@+id/View1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/RelativeLayout2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="#D9D9D9" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp" >

        <ImageView
            android:id="@+id/imageView_peaker_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_menu_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp" 
            android:text="TextView" />

        <TextView
            android:id="@+id/textView_song_name_in_menu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_peaker_meter"
            android:ellipsize="end"
            android:focusable="true"
            android:shadowColor="#000000"
            android:shadowDx="0.3"
            android:shadowDy="0.3"
            android:shadowRadius="0.3"
            android:singleLine="true"
            android:text="@string/song_name"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>